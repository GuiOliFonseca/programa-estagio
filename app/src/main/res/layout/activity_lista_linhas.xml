<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListaLinhas">

    <LinearLayout
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/menu_inicial"/>

    </LinearLayout>

    <SearchView
        android:id="@+id/search_bar_origem"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_cabecalho"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:queryHint="Origem"/>


    <SearchView
        android:id="@+id/search_bar_destino"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:queryHint="Destino"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar_origem"
        android:layout_above="@+id/layout_botoes"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/search_bar_origem"
        android:background="#000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_linhas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barra"
        android:layout_above="@+id/layout_botoes"/>

    <TextView
        android:id="@+id/nenhuma_linha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barra"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="italic"
        android:gravity="center"
        android:text="@string/nenhuma_linha"
        android:visibility="gone"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_above="@+id/layout_botoes"/>

    <RelativeLayout
        android:id="@+id/layout_botoes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:src="@drawable/ic_baseline_keyboard_return_24"
            android:onClick="voltarMenu"/>

        <View
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="#000"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:src="@drawable/ic_baseline_map_24"
            android:onClick="abrirMapa"/>


    </RelativeLayout>
</RelativeLayout>